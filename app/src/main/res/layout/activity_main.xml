<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_iniciar"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="@string/Iniciar_str"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_configuracion"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="Configuracion"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_puntajes" />

    <Button
        android:id="@+id/button_salir"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="Salir"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mapa" />

    <Button
        android:id="@+id/button_instrucciones"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="Instrucciones"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_iniciar" />

    <Button
        android:id="@+id/button_puntajes"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="Puntajes"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_instrucciones" />

    <Button
        android:id="@+id/button_mapa"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_green_rounded"
        android:text="Mapa"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_configuracion" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="287dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />


</androidx.constraintlayout.widget.ConstraintLayout>